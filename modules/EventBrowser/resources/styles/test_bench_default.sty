# -*- mode: conf-unix; -*-

[name="browser_settings"]

#@description Setup label
setup_label : string = "test_bench"

#@description Tab to view at startup.
# 0: 3D Display 1: Raw Data 2: Options, 3: Selection
startup_tab : integer = 0

# 0: Top view 1: Front view 2: Side view
startup_2d_view : integer = 1

#@description Background color of displays
background_color : integer[3] = 0 0 0

#########################################################

[name="geometry_settings"]

#@description List of detectors to take care
volume_list : string[4] = \
	      		  "diaphragm.category" \
			  "absorber.category" \
			  "scin_block.category" \
			  "test_source.category"

#@description Detector visibility (visible/invisible/disable)
diaphragm.category.visibility   : string = "visible"
absorber.category.visibility    : string = "visible"
scin_block.category.visibility  : string = "visible"
test_source.category.visibility : string = "visible"

#@description Detector color
diaphragm.category.color   : string = "kMagenta"
absorber.category.color    : string = "kGreen"
scin_block.category.color  : string = "kYellow"
test_source.category.color : string = "kRed"

#########################################################

[name="particle_settings"]

#@description MC particle color
gamma.color                : string = "kYellow"
electron.color             : string = "kBlue"
positron.color             : string = "kCyan"
alpha.color                : string = "kMagenta"
delta_ray_from_alpha.color : string = "kGreen"

#########################################################

[name="miscellaneous"]

#@description MC line style
mc_line_style : string = "kSolid"
mc_line_width : integer = 1;

#@description Figure save options
save.directory : string = "."
save.extension : string = ".eps"
save.prefix    : string = "event_"

# end of file
