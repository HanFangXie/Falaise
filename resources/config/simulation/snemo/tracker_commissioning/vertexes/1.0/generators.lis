# -*- mode: conf-unix; -*-
# List of multi-properties (datatools::utils::multi_properties):

#@description A list of vertex generators
#@key_label   "name"
#@meta_label  "type"


#################################
# Muon trigger block generators #
#################################

# Generate vertex on the top surface of the muon trigger top scintillator plate :
[name="top_trigger_surface" type="snemo::genvertex::boxed_model_vg"]
debug  : boolean = 0
origin : string  = "category=mu_trigger position={1}"
mode   : string  = "surface"
mode.surface.top  : boolean = 1

###############
# Anode wires #
###############

# Generate vertex on the bulk volume of the anode wires :
[name="anode_wire_bulk" type="snemo::genvertex::cylinder_model_vg"]
debug  : boolean = 0
origin : string  = "category=drift_cell_anodic_wire module={*} side={*} layer={*} row={*}"
mode   : string  = "bulk"

# Generate vertex on the surface of the anode wires:
[name="anode_wire_surface" type="snemo::genvertex::cylinder_model_vg"]
debug  : boolean = 0
origin : string  = "category=drift_cell_anodic_wire module={*} side={*} layer={*} row={*}"
mode   : string  = "surface"
mode.surface.side   : boolean = 1
mode.surface.bottom : boolean = 0
mode.surface.top    : boolean = 0

